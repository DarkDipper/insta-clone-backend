  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "include": ["src/**/*", "./environment.d.ts"]
}
